{
	"dependencies": {
		"@types/node": "^18.13.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"express": "^4.18.2"
	},
	"scripts": {
		"dev": "cross-env NODE_ENV=dev ts-node-dev -r ./src/configs/dotenvConfigRun.ts --respawn --transpile-only --ignore-watch node_modules --no-notify  ./src/server.ts",
    "test:unit": "cross-env NODE_ENV=test jest",
    "test:int": "cross-env NODE_ENV=test jest --runInBand --config jest-integration.config.js",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "lint": "eslint ./",
    "lintFix": "eslint ./ --fix"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
