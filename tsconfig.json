{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
}
